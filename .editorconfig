# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
quote_type = double

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2

# Config files
[*.config.{js,ts,mjs}]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf

# Windows scripts
[*.{bat,cmd,ps1}]
end_of_line = crlf

# Makefiles
[Makefile]
indent_style = tab
